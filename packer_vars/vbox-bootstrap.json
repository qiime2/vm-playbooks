{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "guest_additions_mode": "disable",
      "vm_name": "QIIME_2_BASE_IMAGE",
      "headless": false,
      "iso_urls": [
        "iso/ubuntu-18.04.2-server-amd64.iso",
        "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.2-server-amd64.iso"
      ],
      "iso_checksum": "a2cb36dc010d98ad9253ea5ad5a07fd6b409e3412c48f1860536970b073c98f5",
      "iso_checksum_type": "sha256",
      "http_directory" : "http",
      "disk_size" : 1000000,
      "ssh_wait_timeout": "360m",
      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "2048"],
        ["modifyvm", "{{ .Name }}", "--cpus", "2"],
        ["modifyvm", "{{ .Name }}", "--vram", "256"]
      ],
      "vboxmanage_post": [
        [
          "storageattach",
          "{{ .Name }}",
          "--storagectl",
          "IDE Controller",
          "--port", "1",
          "--device", "0",
          "--type",
          "dvddrive",
          "--medium",
          "emptydrive"
        ]
      ],
      "shutdown_command": "echo ubuntu | sudo -S shutdown -P now",
      "boot_command" : [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " auto<wait>",
        " hostname=placeholder<wait>",
        " fb=false<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " locale=en_US.UTF-8<wait>",
        " passwd/user-fullname=ubuntu<wait>",
        " passwd/username=ubuntu<wait>",
        " passwd/user-password=ubuntu<wait>",
        " passwd/user-password-again=ubuntu<wait>",
        " console-setup/ask_detect=false<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " kbd-chooser/method=us<wait>",
        " initrd=/install/initrd.gz<wait>",
        " --<wait>",
        "<enter><wait>"
      ]
    }
  ]
}
