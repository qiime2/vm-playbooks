{
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./bin/01_ubuntu_common.sh",
        "./bin/02_aws.sh"
      ],
      "environment_vars": [
        "QIIME2_RELEASE={{ user `QIIME2_RELEASE` }}",
        "HOSTNAME={{ user `HOSTNAME` }}"
      ]
    }
  ],

  "builders": [
    {
      "type": "amazon-ebs",
      "instance_type": "m1.large",
      "region": "us-west-2",
      "source_ami": "ami-0edf3b95e26a682df",
      "ami_name": "QIIME 2 Core - {{ user `QIIME2_RELEASE` }} ({{ timestamp }})",
      "ssh_username": "ubuntu"
    }
  ]
}
